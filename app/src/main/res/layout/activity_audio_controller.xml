<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnChooseVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="Chọn voice"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnChooseBeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/btnChooseVoice"
                android:layout_below="@+id/btnChooseVoice"
                android:gravity="left|center_vertical"
                android:text="Chọn beat" />

            <Button
                android:id="@+id/btnChoosePreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/btnChooseVoice"
                android:layout_below="@+id/btnChooseBeat"
                android:gravity="left|center_vertical"
                android:text="Preset" />

            <TextView
                android:id="@+id/tvVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnChooseVoice"
                android:layout_alignTop="@+id/btnChooseVoice"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnChooseVoice"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnChooseBeat"
                android:layout_alignTop="@+id/btnChooseBeat"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnChooseVoice"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvPreset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnChoosePreset"
                android:layout_alignTop="@+id/btnChoosePreset"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnChooseVoice"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/playPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SuperpoweredExample_PlayPause"
                android:layout_below="@+id/btnChoosePreset"
                android:layout_marginTop="5dp"
                android:text="PLAY" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnChoosePreset"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/playPause"
                android:text="Reset" />

            <TextView
                android:id="@+id/tvVoiceTitleVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playPause"
                android:layout_marginTop="10dp"
                android:text="BEAT"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/sbVolumeMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvVoiceTitleVolume"
                android:layout_marginTop="5dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbVolumeMusic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="FLANGER" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FILTER" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROLL" />
            </RadioGroup>

            <TextView
                android:id="@+id/faderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sbVolumeMusic"
                android:layout_marginTop="5dp"
                android:text="Fader"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/fxFader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/faderValue"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/rlEcho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fxFader"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fxFader"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Time"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/timeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.0"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/Time"
                        android:layout_marginTop="5dp"
                        android:max="100" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fxFader"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dryEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Dry Echo"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/dry_valueEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.50"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbDryEcho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/dryEcho"
                        android:layout_marginTop="5dp"
                        android:max="100" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/wet_containerEcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wetEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Wet"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/wet_valueEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbWetEcho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/wetEcho"
                        android:layout_marginTop="5dp"
                        android:max="100" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/width_containerEcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wet_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/widthEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="bpm"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/bpmValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbBpm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/widthEcho"
                        android:layout_marginTop="5dp"
                        android:max="180" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/roomsize_containerEcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/width_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roomsizeEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="beats"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/beatValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbBeatsEcho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/roomsizeEcho"
                        android:layout_marginTop="5dp"
                        android:max="1875" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mix_containerEcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roomsize_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mixEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="mix"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/mixEchoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbEchoMix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/mixEcho"
                        android:layout_marginTop="5dp"
                        android:max="100" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/damp_containerEcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mix_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/decayEcho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="decay"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/decayEchoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbDecayEcho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/decayEcho"
                        android:layout_marginTop="5dp"
                        android:max="100" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/delay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/damp_containerEcho"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/decayEcho1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="delay"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/delayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/sbDelay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/decayEcho1"
                        android:layout_marginTop="5dp"
                        android:max="1000" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/ttReverb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlEcho"
                android:layout_marginTop="15dp"
                android:text="Reverb"
                android:textColor="@android:color/black" />

            <RelativeLayout
                android:id="@+id/dry_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttReverb"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dryReverb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Dry"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/dry_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.50"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_dry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/dryReverb"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wet_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dry_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Wet"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/wet_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_wet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/wet"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/width_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wet_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Width"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/width_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/width"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/roomsize_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/width_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/roomsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Roomsize"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/roomsize_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_roomsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/roomsize"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mix_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomsize_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Mix"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/mix_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_mix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/mix"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/damp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mix_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/damp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Damp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/damp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/reverb_damp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/damp"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/predelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/damp_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/damp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Pre-Delay"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/predelay_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbPredelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/damp1"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lowCutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/predelay"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/damp12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Low cut Hz"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/lowCutReverb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbLowcutHzReverb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/damp12"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pitch_cents_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lowCutContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pitch_Cents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Pitch Cents"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_pitch_cents_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/pitch_cents_seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/pitch_Cents"
                    android:layout_marginTop="5dp"
                    android:max="2400"
                    android:progress="1200" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutCompressor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pitch_cents_container">

                <TextView
                    android:id="@+id/tvCompressor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cbCompressorEnable"
                    android:layout_alignTop="@id/cbCompressorEnable"
                    android:gravity="center_vertical"
                    android:text="Compressor"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/cbCompressorEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvCompressor"
                    android:checked="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cbCompressorEnable"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCompWet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dry - Wet ratio: 1.0"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbDryCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/tvCompAttack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attack second: 0.003"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbAttackCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="299"
                        android:progress="29" />

                    <TextView
                        android:id="@+id/tvCompRelease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release second: 0.3"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbReleaseSecondCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="15"
                        android:progress="2" />

                    <TextView
                        android:id="@+id/tvCompRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratio: 3.0"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbRatioCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="85"
                        android:progress="15" />

                    <TextView
                        android:id="@+id/tvCompThreshold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Threshold: 0"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbThresHoldCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="40"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tvCompHP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hp Cut: 1"
                        android:textColor="@android:color/black" />

                    <SeekBar
                        android:id="@+id/sbHpCutCompressor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="9999"
                        android:progress="0" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnBandEQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutCompressor"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBandBass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bass: 1.0"
                    android:textColor="@android:color/black" />

                <SeekBar
                    android:id="@+id/sbBass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="10" />

                <TextView
                    android:id="@+id/tvBandMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mid: 1.0"
                    android:textColor="@android:color/black" />

                <SeekBar
                    android:id="@+id/sbMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="10" />

                <TextView
                    android:id="@+id/tvBandHi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High: 1.0"
                    android:textColor="@android:color/black" />

                <SeekBar
                    android:id="@+id/sbHi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="10" />
            </LinearLayout>

            <include
                layout="@layout/panel_n_band_eq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnBandEQ"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/panel_n_band_eq"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_item_home_white"
                    android:gravity="center_vertical"
                    android:hint="Nhập tên preset"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etName"
                    android:layout_marginTop="5dp"
                    android:text="Lưu preset" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>