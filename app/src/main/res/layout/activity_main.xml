<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etOffset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="48sp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        <Button
            android:id="@+id/btnEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable" />

        <Button
            android:id="@+id/btnAcoustic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acoustic" />

        <Button
            android:id="@+id/btnBolero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolero" />

        <Button
            android:id="@+id/btnMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master" />

        <Button
            android:id="@+id/btnPopStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PopStar" />

        <Button
            android:id="@+id/btnPopStarFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PopStarFix" />

        <Button
            android:id="@+id/btnRap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rap" />

        <Button
            android:id="@+id/btnStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio" />

    </LinearLayout>
</ScrollView>
